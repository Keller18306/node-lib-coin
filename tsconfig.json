{
    "compilerOptions": {
        "rootDir": "./src/",
        "target": "ESNext",
        "moduleResolution": "Node",
        "module": "commonjs",
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./build/",
        "removeComments": true,
        "declaration": true
    },
    "exclude": [
        "./test/"
    ]
}